package game;

import java.util.Scanner;

public class TicTak {

	private static char tab[][] = {{'.','.','.'},
								   {'.','.','.'},
								   {'.','.','.'}};
	private static Scanner sc = new Scanner(System.in);
	private static char player ='X';
	
	public static void main(String[] args) {
		

		System.out.println("Rozpoczynamy grê");
		while(true) {
			TicTak.printTab();
			boolean move = swap();
			if(player == 'X') {
				player = 'O';
			}else {
				player = 'X';
			}
			}
		}

	private static boolean swap() {
		boolean player = false;
		System.out.println("Podaj wspó³rzêdne np. A1");
		while(!player) {
			String value = sc.next().toUpperCase();
			if(value.length() !=2) {
				System.out.println("Niepoprawna wspó³rzêdna");
			}else if(value.charAt(0) != 'A' &&
					 value.charAt(0) != 'B' &&
					 value.charAt(0) != 'C') {
					System.out.println("Niepoprawna piersza wspó³rzêdna ");
			}else if(value.charAt(1) != '1' &&
					 value.charAt(1) != '2' &&
					 value.charAt(1) != '3') {
				System.out.println("Niepoprawna druga wartoœæ");
			}else {
				int a = 0;
				int b = 0;
				if(value.charAt(0) == 'A') {
					a = 0;
				}else if(value.charAt(0) == 'B') {
					a = 1;
				}else if(value.charAt(0) == 'C'){
					a = 2;
				}
				if(value.charAt(1) == 1) {
					b = 0;
				}else if(value.charAt(1) == 2) {
					b = 1;
				}else if(value.charAt(1) ==3) {
					b = 3;
				}
				if (tab[a][b] != '.') {
					System.out.println("To pole jest ju¿ zajête");
					} else {
					tab[a][b] = 'O';
					player = true;
					}
			}
		}
			return true;
		
	}

	
	private static void printTab() {

		System.out.println();
		System.out.println("\t1\t2\t3");
		System.out.println("A\t"+tab[0][0]+"\t"+tab[0][1]+"\t"+tab[0][2]);
		System.out.println("B\t"+tab[1][0]+"\t"+tab[1][1]+"\t"+tab[1][2]);
		System.out.println("C\t"+tab[2][0]+"\t"+tab[2][1]+"\t"+tab[2][2]);
	}

}
